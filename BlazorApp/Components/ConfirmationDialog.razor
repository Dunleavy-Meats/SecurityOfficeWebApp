@inject MudBlazor.ISnackbar Snackbar
@using BlazorApp.Types

<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="() => Submit(DialogResultType.Print)" Variant="Variant.Outlined" Color="Color.Secondary">@CancelButtonText</MudButton>
        <MudButton OnClick="() => Submit(DialogResultType.Download)" Variant="Variant.Filled" Color="@Color">@SubmitButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string ContentText { get; set; }
    [Parameter] public string SubmitButtonText { get; set; } = "Download";
    [Parameter] public string CancelButtonText { get; set; } = "Print";
    [Parameter] public Color Color { get; set; }

    void Submit(DialogResultType resultType) => MudDialog.Close(DialogResult.Ok(resultType));
    void Cancel() => MudDialog.Close(DialogResult.Cancel());
}